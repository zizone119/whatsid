package ch10;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.Scanner;

class StudentList1 {
	private String name,major;
	private int num;
	private double avg;

	public StudentList1(String name, String major, int num, double avg) {
		this.name = name;
		this.major = major;
		this.num = num;
		this.avg = avg;
	}

	public String getName() {
		return this.name;
	}
	
	public String getMajor() {
		return this.major;
	}

	public int getNum() {
		return this.num;
	}

	public double getAvg() {
		return this.avg;
	}
}

public class StudentListEx {

	public static void main(String[] args) {
		ArrayList<Student>
		hm.put("황기태",new StudentList ("모바일", 1, 4.1));
		hm.put("이재문",new StudentList ("안드로이드", 2, 3.9));
		hm.put("김남윤",new StudentList ("웹공학", 3, 4.25));
		hm.put("최찬미",new StudentList ("빅데이터", 4, 3.5));
		Scanner sc = new Scanner(System.in);
		while(true) {
			System.out.print("학생 이름 >> ");
			String name=sc.next();
			if(name.equals("그만")) break;
			StudentList sl = hm.get(name);
			System.out.println(name+","+sl.getMajor()+","+sl.getNum()+","+sl.getAvg());
		}
	}

}
